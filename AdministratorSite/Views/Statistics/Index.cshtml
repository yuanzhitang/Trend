@{
    ViewBag.Title = "Statistics";
}
@using Trend.DataModel;
@model Dictionary<string, List<Story>>

  <div id="content-header">
    <div id="breadcrumb"> <a href="~/Home/Index" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="current">Task Wall</a> </div>
    <h1>Statistics</h1>
  </div>
  <div class="container-fluid">
    <hr>
      <div class="widget-box">
          <div class="widget-title">
              <span class="icon"> <i class="icon-hand-right"></i> </span>
              <h5>Statistics</h5>
          </div>
          <div class="widget-content">
                  <ul class="stat-boxes2">
                      <li>
                          <div class="right"> <strong style="color:green">@Html.Action("TotalCompletedStoryCount", "Statistics")</strong> Completed Stories </div>
                      </li>

                      <li>
                          <div class="right"> <strong style="color:red">@Html.Action("TotalFailedStoryCount", "Statistics")</strong> Failed Stories </div>
                      </li>
                  </ul>

              
          </div>
      </div>

      <div class="row-fluid">
          <div class="span12">
              @Html.Action("SprintCompleteRateView", "Statistics")
          </div>
      </div>

      <div class="row-fluid">
          <div class="span6">
              @Html.Action("StorySuccessRateView", "Statistics")
          </div>
          <div class="span6">
              @Html.Action("StorySizeCountView", "Statistics")
          </div>
      </div>
      
      <div class="row-fluid">
          <div class="span12">
              @Html.Action("FrequentWordView", "Statistics")
          </div>
      </div>

     

